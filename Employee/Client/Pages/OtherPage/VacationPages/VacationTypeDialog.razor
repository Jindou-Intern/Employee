<SfDialog Width="350pxx" IsModal="true" ShowCloseIcon="true" @bind-Visible="IsVisible">
    <DialogEvents OnOpen="OpenDialog"></DialogEvents>
    <DialogTemplates>
        <Header>@Title Country</Header>
        <Content>
            <EditForm Model="VacationType" OnValidSubmit="Save">
                <div class="card border-success">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">Id</label>
                            <input @bind="VacationType.Id" class="form-control" disabled />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Name</label>
                            <InputText @bind-Value="VacationType.Name" class="form-control" />
                        </div>
                    </div>

                    <div class="card-footer">
                        <button class="btn btn-primary float-end" type="submit">SAVE</button>
                    </div>
                </div>
            </EditForm>
        </Content>
    </DialogTemplates>
</SfDialog>


@code {
    [Parameter] public VacationType VacationType { get; set; } = new();
    [Parameter] public EventCallback<VacationType> HandleSaveOperationEvent { get; set; }

    private bool IsVisible { get; set; }
    public string Title { get; set; } = "Add";

    public void OpenDialog()
    {
        IsVisible = true;
        StateHasChanged();
    }

    private async Task Save()
    {
        if (string.IsNullOrEmpty(VacationType.Name))
        {
            await dialogService.AlertAsync("You need to provide Vacation Type name.", "Alert!");
        }
        else
        {
            await HandleSaveOperationEvent.InvokeAsync(VacationType);
            IsVisible = false; // Close the dialog after saving
        }
    }

    public void ChangeTitle(string title)
    {
        Title = title;
    }
}
